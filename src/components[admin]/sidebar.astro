<div
    class="side-menubar-container absolute left-0 h-screen lg:block lg:w-[20%] w-full bg-[#5344f5] z-10"
>
    <div class="menuholder h-full flex flex-col">
        <div
            class="logo py-4 mb-4 flex px-5 lg:px-0 justify-between lg:justify-center items-center"
        >
            <span class="text-white text-4xl text-center">SMM Panel Admin</span>
            <!-- <img
                class="h-14"
                src="https://white.logodownload.org/wp-content/uploads/2020/11/google-white-logo-1.png"
                alt=""
            /> -->

            <i
                id="menuCloseToggleBtn"
                class="text-white lg:hidden text-lg cursor-pointer fa-solid fa-x"
            ></i>
        </div>

        <div class="menuList overflow-y-auto">
            <ul class="text-white">
                <li class="hover:bg-[#261d8b] cursor-pointer">
                    <a
                        href="/admin"
                        class="px-3 py-2 size-full flex justify-between items-center"
                    >
                        <span
                            ><i class="px-3 fa-solid fa-gauge"></i> Dashboard</span
                        >
                    </a>
                </li>
                <li class="hover:bg-[#261d8b] cursor-pointer">
                    <a
                        class="px-3 py-2 size-full flex justify-between items-center"
                    >
                        <span
                            ><i class="px-3 fa-regular fa-newspaper"></i>SMM
                            Panels</span
                        >
                        <i
                            class="fa-solid fa-caret-down ease-in-out duration-300"
                        ></i>
                    </a>
                </li>
                <ul class="innerMenuList h-0 invisible">
                    <li class="pl-6 hover:bg-[#261d8b] py-2 cursor-pointer">
                        <a href="/admin/SMMPanelNew"
                            ><i class="px-3 fa-solid fa-file-plus-minus"></i>Add
                            SMM Panels</a>
                    </li>
                    <li class="pl-6 hover:bg-[#261d8b] py-2 cursor-pointer">
                        <a href="/admin/SMMPanel"
                            ><i class="px-3 fa-solid fa-icons"></i>Manage</a>
                    </li>
                </ul>

                <li class="hover:bg-[#261d8b] cursor-pointer">
                    <a
                        class="px-3 py-2 size-full flex justify-between items-center"
                    >
                        <span
                            ><i class="px-3 fa-regular fa-newspaper"
                            ></i>Pages</span
                        >
                        <i
                            class="fa-solid fa-caret-down ease-in-out duration-300"
                        ></i>
                    </a>
                </li>
                <ul class="innerMenuList h-0 invisible">
                    <li class="pl-6 hover:bg-[#261d8b] py-2 cursor-pointer">
                        <a href="/admin/pagesNew"
                            ><i class="px-3 fa-solid fa-file-plus-minus"></i>Add
                            New Page</a>
                    </li>
                    <li class="pl-6 hover:bg-[#261d8b] py-2 cursor-pointer">
                        <a href="/admin/pages"
                            ><i class="px-3 fa-solid fa-icons"></i>Manage Pages</a>
                    </li>
                </ul>

                <li class="hover:bg-[#261d8b] cursor-pointer">
                    <a
                        href="/admin/users"
                        class="px-3 py-2 size-full flex justify-between items-center">
                        <span
                            ><i class="px-3 fa-solid fa-users"></i>Manage Users</span
                        >
                    </a>
                </li>
                <li class="hover:bg-[#261d8b] cursor-pointer">
                    <a
                        href="/admin/site-settings"
                        class="px-3 py-2 size-full flex justify-between items-center">
                        <span
                            ><i class="px-3 fa-solid fa-globe-pointer"
                            ></i>Manage Website</span
                        >
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
