---
interface Props {
    No : number,
    Title : string,
    Publish_Date : string,
    Action : string,
}
const {No, Title, Publish_Date, Action } = Astro.props;
---

<div class="row flex py-2"
    class:list={[
        {"bg-[#f0f8ff]" : No % 2 == 1},
        {"bg-white" : No % 2 == 0}
    ]}
>
    <div title={No.toString()} class="field px-3 line-clamp-1 w-[10%]">{No.toString()}</div>
    <div title={Title} class="field px-3 line-clamp-1 w-[30%]">{Title}</div>
    <div title={Publish_Date} class="field px-3 line-clamp-1 w-[30%]">{Publish_Date}</div>
    <div title={Action} class="field px-3 line-clamp-1 w-[30%]">
        <div class="actionBtns flex gap-3">
            <a data-id={Action} class="EditBtn px-2 py-1 rounded-md hover:font-semibold text-green-600 bg-green-100 cursor-pointer">Edit</a>
            <a data-id={Action} class="DeleteBtn px-2 py-1 rounded-md hover:font-semibold text-red-600 bg-red-300 cursor-pointer">Delete</a>
        </div>
    </div>
</div>