---
interface Props {
    textLabelText :string
    textBoxId :string
    placeholder : string,
    isRequired : boolean
}

const {textLabelText, textBoxId ,placeholder ,isRequired} = Astro.props;

---

<span class="flex items-center gap-4">
    <label class="w-1/3 text-right" for="">{textLabelText} {isRequired && "*"}</label>
    <input type="text" id={textBoxId} name={textBoxId} 
    class="w-2/3 p-2 px-3 rounded-md border border-[#f4f4f4] bg-white text-[#555555] shadow-lg"
    placeholder={placeholder}
    required = {isRequired}
    >
</span>